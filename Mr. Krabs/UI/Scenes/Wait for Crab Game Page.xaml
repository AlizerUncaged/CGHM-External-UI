<UserControl x:Class="Mr.Krabs.UI.Scenes.WaitForCrabGamePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mr.Krabs.UI.Scenes"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="350">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40,0">
        <TextBlock 
                        Text="Waiting for Crab Game..." 
                        Foreground="#7FFFFFFF" 
                        FontFamily="{materialDesign:MaterialDesignFont}" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold">
        </TextBlock>
        <TextBlock 
                        TextWrapping="Wrap"
                        Text="Please run Crab Game to continue, if Crab Game is ran as Administrator, this program should too." 
                        Foreground="#3FFFFFFF" 
                        FontFamily="{materialDesign:MaterialDesignFont}" Margin="0,10,0,0" VerticalAlignment="Top" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
